<Window x:Class="KHBBS_BON_Viewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KHBBS_BON_Viewer"
        mc:Ignorable="d"
        Title="KH_BON_Viewer" Height="1100" Width="2200"
        Background="#0d1117"
        AllowDrop="True"
        Drop="Window_Drop"
        DragEnter="Window_DragEnter"
        DragOver="Window_DragOver">
    <Window.Resources>
        <!-- Modern/Fluent Dark Theme Colors -->
        <SolidColorBrush x:Key="PrimaryBackground" Color="#0d1117"/>
        <SolidColorBrush x:Key="SecondaryBackground" Color="#161b22"/>
        <SolidColorBrush x:Key="TertiaryBackground" Color="#21262d"/>
        <SolidColorBrush x:Key="AccentColor" Color="#58a6ff"/>
        <SolidColorBrush x:Key="AccentHover" Color="#79c0ff"/>
        <SolidColorBrush x:Key="BorderColor" Color="#30363d"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#f0f6fc"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#9198a1"/>
        <SolidColorBrush x:Key="SuccessColor" Color="#3fb950"/>
        <SolidColorBrush x:Key="CellHover" Color="#1f2937"/>
        <SolidColorBrush x:Key="RowHover" Color="#1c2432"/>
        <SolidColorBrush x:Key="RowBorder" Color="#262d3a"/>
        <SolidColorBrush x:Key="CellBackground" Color="#161b22"/>
        <SolidColorBrush x:Key="CellBorder" Color="#21262d"/>

        <!-- Column Type Colors -->
        <SolidColorBrush x:Key="IndexColor" Color="#58a6ff"/>
        <SolidColorBrush x:Key="ScaleColor" Color="#f85149"/>
        <SolidColorBrush x:Key="RotationColor" Color="#d29922"/>
        <SolidColorBrush x:Key="TranslationColor" Color="#3fb950"/>
        <SolidColorBrush x:Key="BoneNameColor" Color="White"/>

        <!-- Modern Menu Style -->
        <Style TargetType="Menu">
            <Setter Property="Background" Value="{StaticResource SecondaryBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5,4"/>
        </Style>

        <Style TargetType="MenuItem">
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="Background" Value="{StaticResource SecondaryBackground}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,7"/>
            <Style.Triggers>
                <Trigger Property="IsHighlighted" Value="True">
                    <Setter Property="Background" Value="{StaticResource TertiaryBackground}"/>
                    <Setter Property="Foreground" Value="{StaticResource AccentColor}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern TextBlock Style -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0">
            <MenuItem Header="_File">
                <MenuItem Header="_Open PMO File..." Click="OpenFile_Click"/>
                <Separator Background="{StaticResource BorderColor}"/>
                <MenuItem Header="E_xit" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Header="_Copy Cell Value" Click="CopyCell_Click" InputGestureText="Ctrl+C"/>
                <MenuItem Header="Copy _Row (Tab-separated)" Click="CopyRow_Click" InputGestureText="Ctrl+Shift+C"/>
            </MenuItem>
        </Menu>

        <!-- Info Panel -->
        <Border Grid.Row="1" 
                Background="{StaticResource SecondaryBackground}" 
                BorderBrush="{StaticResource BorderColor}" 
                BorderThickness="0,1"
                Padding="15,12">
            <StackPanel Orientation="Horizontal">
                <Border Background="{StaticResource TertiaryBackground}" 
                        CornerRadius="6" 
                        Padding="14,8" 
                        Margin="0,0,15,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="📁" FontSize="15" VerticalAlignment="Center"/>
                        <TextBlock Text="File: " 
                                   Foreground="{StaticResource TextSecondary}" 
                                   VerticalAlignment="Center"
                                   FontWeight="Medium"
                                   Margin="6,0"/>
                        <TextBlock x:Name="FileNameText" 
                                   Text="No file loaded" 
                                   Foreground="{StaticResource AccentColor}" 
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <Border Background="{StaticResource TertiaryBackground}" 
                        CornerRadius="6" 
                        Padding="14,8" 
                        Margin="0,0,15,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🦴" FontSize="15" VerticalAlignment="Center"/>
                        <TextBlock Text="Bones: " 
                                   Foreground="{StaticResource TextSecondary}"
                                   VerticalAlignment="Center"
                                   FontWeight="Medium"
                                   Margin="6,0"/>
                        <TextBlock x:Name="BoneCountText" 
                                   Text="0" 
                                   Foreground="{StaticResource SuccessColor}" 
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <Border Background="{StaticResource TertiaryBackground}" 
                        CornerRadius="6" 
                        Padding="14,8">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="✨" FontSize="15" VerticalAlignment="Center"/>
                        <TextBlock Text="Skinned: " 
                                   Foreground="{StaticResource TextSecondary}"
                                   VerticalAlignment="Center"
                                   FontWeight="Medium"
                                   Margin="6,0"/>
                        <TextBlock x:Name="SkinnedBoneCountText" 
                                   Text="0" 
                                   Foreground="{StaticResource SuccessColor}" 
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <!-- DataGrid -->
        <Border Grid.Row="2" 
                Background="{StaticResource PrimaryBackground}"
                Margin="15">
            <Grid>
                <DataGrid x:Name="BoneDataGrid" 
                          AutoGenerateColumns="False" 
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          Background="Transparent"
                          Foreground="{StaticResource TextPrimary}"
                          GridLinesVisibility="None"
                          HeadersVisibility="Column"
                          RowBackground="Transparent"
                          AlternatingRowBackground="Transparent"
                          BorderThickness="0"
                          FontSize="13"
                          FontFamily="Segoe UI, Arial"
                          RowHeight="46"
                          SelectionMode="Single"
                          SelectionUnit="Cell"
                          IsReadOnly="True"
                          AllowDrop="True"
                          Drop="Window_Drop"
                          DragEnter="Window_DragEnter"
                          DragOver="Window_DragOver" SelectionChanged="BoneDataGrid_SelectionChanged_1">

                    <!-- Scrollbar Styling -->
                    <DataGrid.Resources>
                        <Style TargetType="ScrollBar">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Width" Value="12"/>
                            <Style.Triggers>
                                <Trigger Property="Orientation" Value="Horizontal">
                                    <Setter Property="Height" Value="12"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.Resources>

                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Background" Value="{StaticResource CellBackground}"/>
                            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                            <Setter Property="Padding" Value="12,0"/>
                            <Setter Property="Margin" Value="2"/>
                            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                            <Setter Property="VerticalAlignment" Value="Stretch"/>
                            <Setter Property="HorizontalAlignment" Value="Stretch"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridCell">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="6"
                                                Margin="{TemplateBinding Margin}">
                                            <ContentPresenter VerticalAlignment="Center" 
                                                              HorizontalAlignment="Center"
                                                              Margin="{TemplateBinding Padding}"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{StaticResource CellHover}"/>
                                    <Setter Property="BorderBrush" Value="{StaticResource AccentColor}"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="{StaticResource AccentColor}"/>
                                    <Setter Property="Foreground" Value="#0d1117"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="BorderBrush" Value="{StaticResource AccentHover}"/>
                                    <Setter Property="BorderThickness" Value="2"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.CellStyle>

                    <!-- Column Header -->
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="{StaticResource SecondaryBackground}"/>
                            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="FontSize" Value="12"/>
                            <Setter Property="Padding" Value="16,14"/>
                            <Setter Property="BorderThickness" Value="0,0,0,2"/>
                            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="Height" Value="48"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridColumnHeader">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                        </Style>
                    </DataGrid.RowStyle>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Index" Binding="{Binding Index}" Width="100">
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
                                    <Setter Property="Foreground" Value="{StaticResource IndexColor}"/>
                                    <Setter Property="Background" Value="{StaticResource SecondaryBackground}"/>
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Sibling" Binding="{Binding SiblingIndex}" Width="100">
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
                                    <Setter Property="Foreground" Value="{StaticResource IndexColor}"/>
                                    <Setter Property="Background" Value="{StaticResource SecondaryBackground}"/>
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Parent" Binding="{Binding ParentIndex}" Width="100">
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
                                    <Setter Property="Foreground" Value="{StaticResource IndexColor}"/>
                                    <Setter Property="Background" Value="{StaticResource SecondaryBackground}"/>
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Child" Binding="{Binding ChildIndex}" Width="100">
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
                                    <Setter Property="Foreground" Value="{StaticResource IndexColor}"/>
                                    <Setter Property="Background" Value="{StaticResource SecondaryBackground}"/>
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="ScaleX" Binding="{Binding ScaleXStr}" Width="130">
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
                                    <Setter Property="Foreground" Value="{StaticResource ScaleColor}"/>
                                    <Setter Property="Background" Value="{StaticResource SecondaryBackground}"/>
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="FontFamily" Value="Consolas, Courier New"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="ScaleY" Binding="{Binding ScaleYStr}" Width="130">
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
                                    <Setter Property="Foreground" Value="{StaticResource ScaleColor}"/>
                                    <Setter Property="Background" Value="{StaticResource SecondaryBackground}"/>
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="FontFamily" Value="Consolas, Courier New"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="ScaleZ" Binding="{Binding ScaleZStr}" Width="130">
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
                                    <Setter Property="Foreground" Value="{StaticResource ScaleColor}"/>
                                    <Setter Property="Background" Value="{StaticResource SecondaryBackground}"/>
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="FontFamily" Value="Consolas, Courier New"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="ScaleW" Binding="{Binding ScaleWStr}" Width="130">
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
                                    <Setter Property="Foreground" Value="{StaticResource ScaleColor}"/>
                                    <Setter Property="Background" Value="{StaticResource SecondaryBackground}"/>
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="FontFamily" Value="Consolas, Courier New"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="RotationX" Binding="{Binding RotationXStr}" Width="160">
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
                                    <Setter Property="Foreground" Value="{StaticResource RotationColor}"/>
                                    <Setter Property="Background" Value="{StaticResource SecondaryBackground}"/>
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="FontFamily" Value="Consolas, Courier New"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="RotationY" Binding="{Binding RotationYStr}" Width="160">
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
                                    <Setter Property="Foreground" Value="{StaticResource RotationColor}"/>
                                    <Setter Property="Background" Value="{StaticResource SecondaryBackground}"/>
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="FontFamily" Value="Consolas, Courier New"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="RotationZ" Binding="{Binding RotationZStr}" Width="160">
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
                                    <Setter Property="Foreground" Value="{StaticResource RotationColor}"/>
                                    <Setter Property="Background" Value="{StaticResource SecondaryBackground}"/>
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="FontFamily" Value="Consolas, Courier New"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="RotationW" Binding="{Binding RotationWStr}" Width="160">
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
                                    <Setter Property="Foreground" Value="{StaticResource RotationColor}"/>
                                    <Setter Property="Background" Value="{StaticResource SecondaryBackground}"/>
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="FontFamily" Value="Consolas, Courier New"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="TranslationX" Binding="{Binding TranslationXStr}" Width="160">
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
                                    <Setter Property="Foreground" Value="{StaticResource TranslationColor}"/>
                                    <Setter Property="Background" Value="{StaticResource SecondaryBackground}"/>
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="FontFamily" Value="Consolas, Courier New"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="TranslationY" Binding="{Binding TranslationYStr}" Width="160">
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
                                    <Setter Property="Foreground" Value="{StaticResource TranslationColor}"/>
                                    <Setter Property="Background" Value="{StaticResource SecondaryBackground}"/>
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="FontFamily" Value="Consolas, Courier New"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="TranslationZ" Binding="{Binding TranslationZStr}" Width="160">
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
                                    <Setter Property="Foreground" Value="{StaticResource TranslationColor}"/>
                                    <Setter Property="Background" Value="{StaticResource SecondaryBackground}"/>
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="FontFamily" Value="Consolas, Courier New"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Bone Name" Binding="{Binding BoneName}" Width="*" MinWidth="200">
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
                                    <Setter Property="Foreground" Value="{StaticResource BoneNameColor}"/>
                                    <Setter Property="Background" Value="{StaticResource SecondaryBackground}"/>
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="FontWeight" Value="Medium"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Drag and Drop Overlay -->
                <Border x:Name="DragDropOverlay"
                        Background="#AA161b22"
                        Visibility="Collapsed"
                        IsHitTestVisible="False">
                    <Border Background="{StaticResource TertiaryBackground}"
                            BorderBrush="{StaticResource AccentColor}"
                            BorderThickness="3"
                            CornerRadius="12"
                            Margin="40"
                            Padding="40">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="📁" 
                                       FontSize="64" 
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,20"/>
                            <TextBlock Text="Drop PMO file here" 
                                       FontSize="24" 
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource AccentColor}"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Border>
            </Grid>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="3" 
                Background="{StaticResource SecondaryBackground}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="0,1,0,0"
                Padding="15,10">
            <TextBlock x:Name="StatusText" 
                       Text="" 
                       Foreground="{StaticResource TextPrimary}"
                       FontSize="13"
                       VerticalAlignment="Center"/>
        </Border>
    </Grid>
</Window>
