<Window x:Class="OpenKh.Tools.Kh2ObjectEditor.Modules.Motions.MotionRenameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenKh.Tools.Kh2ObjectEditor.Modules.Motions"
        mc:Ignorable="d"
        Title="MotionRenameWindow" Height="120" Width="280"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <TextBox Name="NameTextBox" Grid.Row="0" Height="30" Margin="10" VerticalContentAlignment="Center" MaxLength="4"></TextBox>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Width="75" Margin="0 0 10 0" Click="Button_Rename">Rename</Button>
            <Button Width="75" Margin="0 0 10 0" Click="Button_Cancel">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>
