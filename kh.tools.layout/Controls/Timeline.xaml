<UserControl x:Class="kh.tools.layout.Controls.Timeline"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:kh.tools.layout.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="120" d:DesignWidth="300"
             MouseDown="UserControl_MouseDown">
    <Grid Background="White">
        <Canvas>
            <Line
                x:Name="cursor"
                Stroke="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=Foreground}"
                Canvas.Top="0"
                Canvas.Left="0"
                StrokeThickness="2"
                Y2="{Binding RelativeSource={RelativeSource Self}, Path=Parent.ActualHeight}"/>
        </Canvas>
    </Grid>
</UserControl>
